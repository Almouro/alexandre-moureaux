mixin side-menu-link(state)
  .link(ui-sref=state, ng-class="{'current-state': getState()==='" + state + "'}")
    if block
      block

div
  +side-menu-link('home') Home
div
  +side-menu-link('christian') Christian
div
  +side-menu-link('software') Engineer
div
  +side-menu-link('music') Composer
div
  +side-menu-link('contact') Contact
div
  +side-menu-link('about')
    span About this Site